<robot name="roomba_x" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Base: corpo circular -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="3.0"/>
      <inertia ixx="0.02" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.04"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.17" length="0.07"/>
      </geometry>
      <material name="gray">
        <color rgba="0.3 0.3 0.3 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.17" length="0.07"/>
      </geometry>
    </collision>
  </link>

  <!-- Roda esquerda -->
  <link name="left_wheel">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.3"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
      <material name="black">
        <color rgba="0.05 0.05 0.05 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
    </collision>
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <!-- Ajuste z = -altura/2 + raio da roda -->
    <origin xyz="0 0.14 -0.035" rpy="0 1.5708 0"/>
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <axis xyz="0 0 1"/>
    <limit effort="2.0" velocity="20"/>
  </joint>

  <!-- Roda direita -->
  <link name="right_wheel">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.3"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
      <material name="black">
        <color rgba="0.05 0.05 0.05 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
    </collision>
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <origin xyz="0 -0.14 -0.035" rpy="0 1.5708 0"/>
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <axis xyz="0 0 1"/>
    <limit effort="2.0" velocity="20"/>
  </joint>

  <!-- Rodinha traseira (caster) -->
  <link name="caster_wheel">
    <visual>
      <geometry>
        <sphere radius="0.015" />
      </geometry>
      <material name="gray_dark">
        <color rgba="0.2 0.2 0.2 1" />
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.015" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.05" />
      <origin xyz="0 0 0" />
      <inertia ixx="1e-4" iyy="1e-4" izz="1e-4" />
    </inertial>
  </link>

  <joint name="caster_joint" type="fixed">
    <!-- Ajuste z para tocar o chÃ£o -->
    <parent link="base_link" />
    <child link="caster_wheel" />
    <origin xyz="-0.12 0 -0.035" />
  </joint>

</robot>
